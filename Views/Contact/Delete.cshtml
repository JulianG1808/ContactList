@model ProyectoCrud.Models.Contact

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Contacto</h4>
            </div>
            <div class="panel-body">
                <div class="alert-danger">
                    ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombres) @Html.DisplayTextFor(m => m.Apellidos)?
                </div>

                <form action="@Url.Action("Delete", "Contact")" method="post">
                    <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayTextFor(m => m.IdContacto)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio", "Contact")">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

